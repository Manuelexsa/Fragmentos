<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kronos.pmdmfragmentos.GAnadir">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inmueble"
        android:id="@+id/tvCase"
        android:gravity="center"
        android:textSize="30sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCase"
        android:hint="C/Ejemplo Nº"
        android:id="@+id/etLocalidad" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etLocalidad"
        android:hint="Localidad"
        android:id="@+id/etDireccion" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etDireccion"
        android:hint="Tipo de Inmueble"
        android:id="@+id/etTipo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etTipo"

        android:hint="€"
        android:id="@+id/etPrecio"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etTipo"
        android:textSize="25sp"
        android:text="€"
        android:id="@+id/textView"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPrecio"
        android:text="@string/aceptar"
        android:id="@+id/btAceptar"
        android:onClick="aceptar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPrecio"
        android:layout_toRightOf="@id/btAceptar"
        android:text="@string/cancelar"
        android:id="@+id/btCancelar"
        android:onClick="cancelar" />
</RelativeLayout>